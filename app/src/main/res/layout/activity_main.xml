<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="xir3n16.remidiuts.telkomschid.remidiuts.MainActivity"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:text="SELAMAT DATANG DI REMIDI UTS ANDROID"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Holo.Widget.TextView"
        android:textSize="24sp"
        android:layout_weight="0.20" />


    <Button
        android:id="@+id/swipe"
        style="@android:style/Widget.DeviceDefault.Button.Inset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="50dp"
        android:text="Navigasi 1"
        tools:layout_editor_absoluteX="131dp"
        tools:layout_editor_absoluteY="86dp" />

    <Button
        android:id="@+id/tab"
        style="@android:style/Widget.DeviceDefault.Button.Inset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="50dp"
        android:text="Navigasi 2"
        tools:layout_editor_absoluteX="131dp"
        tools:layout_editor_absoluteY="161dp" />

    <Button
        android:id="@+id/spinner"
        style="@android:style/Widget.DeviceDefault.Button.Inset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="50dp"
        android:text="Navigasi 3"
        tools:layout_editor_absoluteX="131dp"
        tools:layout_editor_absoluteY="310dp" />

    <Button
        android:id="@+id/drawer"
        style="@android:style/Widget.DeviceDefault.Button.Inset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="50dp"
        android:text="Navigasi 4"
        tools:layout_editor_absoluteX="131dp"
        tools:layout_editor_absoluteY="231dp" />

</LinearLayout>

